<div align="center" ng-show="isLoading">
    <img src="~/Resources/Picture/loading.gif" align="center" />
</div>
<div class="row" ng-show="!isLoading">
    <h4></h4>
</div>
<div class="row" style="margin-top: 50px;" ng-show="!isLoading">
    <div class="row" ng-repeat="trans in transportations">
        <div class="col-md-6" style="margin-top:20px;">
            <div class="media">
                <div class="media-left">
                    <a href="#">
                        <img class="media-object" style="width:200px;height:120px;" ng-src="{{pictures[trans.id] || '/Resources/Picture/empty_application.jpg'}}" alt="...">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">{{trans.title}}</h4>
                    <h5 class="media-heading">Адреса відправлення: {{trans.sendAddress}}</h5>
                    <h5 class="media-heading">Адреса отримання: {{trans.deliveryAddress}}</h5>
                    <h5 class="media-heading">Контактний телефон: {{trans.contactPhone}}</h5>
                </div>
            </div>
        </div>
    </div>

    <button style="margin-top:20px;" type="button" class="btn btn-primary" ng-click="loadMore()">Загрузити ще</button>
</div>
