<div align="center" ng-show="isLoading">
    <img src="~/Resources/Picture/loading.gif" align="center"/>
</div>
<div class="row" ng-show="!isLoading">
    <h4></h4>
</div>
<div class="row" style="margin-top: 50px;" ng-show="!isLoading">
    <form class="bs-component" name="registerForm">
        <div class="row">
        <div class="form-group col-md-6 col-md-offset-3">
            <label class="control-label">Логін:</label>
            <input class="form-control" ng-model="userToRegister.Login" type="text" required>
        </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6  col-md-offset-3">
                <label class="control-label">Пароль:</label>
                <input class="form-control" ng-model="userToRegister.Password" type="password" required>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6  col-md-offset-3">
                <label class="control-label">Підтвердження пароля:</label>
                <input class="form-control" ng-model="userToRegister.ConfirmationPassword" type="password" required>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6  col-md-offset-3">
                <label class="control-label">ПІБ:</label>
                <input class="form-control" ng-model="userToRegister.FullName" type="text" required>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6  col-md-offset-3">
                <label class="control-label">Ваш телефон:</label>
                <input class="form-control" ng-model="userToRegister.WorkPhone" type="text">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6  col-md-offset-3">
                <label class="control-label">Місто проживання:</label>
                <input class="form-control" ng-model="userToRegister.City" type="text">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-md-offset-3">
                    <button type="submit" class="btn btn-primary" ng-click="registerUser()">Зареєструватися</button>
            </div>
        </div>
    </form>
</div>
