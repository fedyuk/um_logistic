<div align="center" ng-show="isLoading">
    <img src="~/Resources/Picture/loading.gif" align="center" />
</div>
<div class="row" ng-show="!isLoading">
    <h4></h4>
</div>
<div class="row" style="margin-top: 100px;" ng-show="!isLoading">
    <div class="row" ng-show="tasks.length == 0">
        <div class="col-md-offset-6 btn-sm">
            <p>Немає даних</p>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Тип</th>
                <th>Заголовок</th>
                <th>Коли створено</th>
                <th>Коли змінено</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="task in tasks">
                <td>{{task.id}}</td>
                <td>{{task.type}}</td>
                <td>{{task.title}}</td>
                <td>{{task.createdOn}}</td>
                <td>{{task.modifiedOn}}</td>
                <td>
                    <a class="btn btn-success btn-sm" href="#" ng-click="acceptTask(task.id)">
                        <i class="fa fa-check fa-sm"></i>
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
    <button style="margin-top:20px;" type="button" class="btn btn-primary col-md-offset-6 btn-sm" ng-click="loadMore()">Загрузити ще</button>
</div>
