<div align="center" ng-show="isLoading">
    <img src="~/Resources/Picture/loading.gif" align="center" />
</div>
<div class="row" ng-show="!isLoading" align="center">
    <div class="row" style="margin-top: 100px;">
        <h4>Заявка на перевезення:</h4>
    </div>
    <div class="row" >
        <h5>Номер заявки: {{transportationToView.Id}}</h5>
    </div>
    <div class="row">
        <h5>ПІБ: {{transportationToView.Name}}</h5>
    </div>
    <div class="row">
        <h5>Адреса відправки: {{transportationToView.SendAddress}}</h5>
    </div>
    <div class="row">
        <h5>Адреса отримання: {{transportationToView.DeliveryAddress}}</h5>
    </div>
    <div class="row">
        <h5>Дата отримання вантажу: {{transportationToView.CompleteDate}}</h5>
    </div>
    <div class="row">
        <h5>Тип вантажу: {{transportationToView.ShipmentType}}</h5>
    </div>
    <div class="row">
        <h5>Довжина вантажу: {{transportationToView.ShipmentLength}}</h5>
    </div>
    <div class="row">
        <h5>Ширина вантажу: {{transportationToView.ShipmentWidth}}</h5>
    </div>
    <div class="row">
        <h5>Висота вантажу: {{transportationToView.ShipmentHeight}}</h5>
    </div>
    <div class="row">
        <h5>Вантажність(т): {{transportationToView.ShipmentCapacity}}</h5>
    </div>
    <div class="row">
        <h5>Об'єм(м3): {{transportationToView.ShipmentWeight}}</h5>
    </div>
</div>
<ul class="gallery gallery1">
    <li ng-repeat="picture in pictures" ng-show="!isLoading">
        <a ng-click="openLightboxModal($index)">
            <img ng-src="{{picture.url || '/Resources/Picture/empty_application.jpg'}}" class="img-thumbnail">
        </a>
    </li>
</ul>
